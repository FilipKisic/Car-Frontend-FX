            </Button>
            <Button fx:id="btnDelete" layoutX="412.0" layoutY="360.0" mnemonicParsing="false"
                    onAction="#onBtnDeletePressed" prefHeight="39.0" prefWidth="150.0" text="Delete"
                    textFill="RED">
